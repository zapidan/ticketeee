<%= simple_form_for([project, ticket]) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :tag_names, label: "Tags" %>
  
  <div id="attachments">
    <h3>Attachments</h3>
    <%= render partial: "attachments/form", locals: { f: f, index: 0 } %>
  </div>
  <p>
    <%= link_to "Add another file", new_attachment_path, remote: true, id: "add_file", data: { params: {index: 1} } %>  <!-- index updated with coffesescript-->
  </p>
  <%= f.button :submit, class: "btn-primary" %>
<% end %>